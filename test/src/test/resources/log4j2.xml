<Configuration monitorInterval="30" >
    
    <Appenders>

        <Console
                name="console"
                target="SYSTEM_OUT">
            <PatternLayout pattern="%p %C:%L %m%n" />
        </Console>
        
    </Appenders>

    <Loggers>

        <Root level="debug">
            <AppenderRef ref="console"/>
        </Root>
        
    </Loggers>
    
</Configuration>
